<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatKotlin">

    <application
        android:name=".FirebaseRemote.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".chat.activity.SettingsActivity"
            android:exported="true" />
        <activity
            android:name=".chat.Activity.ChatActivity"
            android:exported="true"
            android:parentActivityName=".chat.Activity.HomeActivity" />
        <activity
            android:name=".chat.Activity.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".chat.Activity.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".FirebaseRemote.RemoteConfigActivity"
            android:exported="true" />
        <activity
            android:name=".chat.Activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>